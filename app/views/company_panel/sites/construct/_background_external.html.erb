<!-- background : external -->
        <div data-setting="background::external" class="setting hidden">
            <div class="container">
                <!--Полный блок с вкладками-->
                <ul class="tabs">
                    <li><a data-tab="1" href="#" class="active">Цвет фона</a></li>
                    <li><a data-tab="2" href="#">Изображение фона</a></li>
                </ul>
                <div class="tabs-content">
                    <div data-tab="1" class="tab-content visible">
                        <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                          <%= f.hidden_field :remove_tmp_external_image_background, :value => nil %>
                          <div class="picker">
                              <div class="plugin"><%= f.text_field :tmp_external_color_background, :value => @site.get_external_color_background(true) %></div>
                              <div class="result"></div>
                              <div class="clear"></div>
                          </div>
                        <% end %>
                        <!--Тег говорит сам за себя-->
                        <footer>
                            <div class="buttons">
                              <div style="float:left;">
                                <%= render :partial => 'company_panel/sites/construct/commit_form' %>
                              </div>
                              <div style="float:left;">
                                <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                                  <input type="hidden" name="site[external_color_background]" value="" />
                                  <input type="hidden" name="site[tmp_external_color_background]" value="" />
                                  <input type="submit" class="button" value="Сбросить" />
                                <% end %>
                              </div>
                              <div class="clear;"></div>
                            </div>
                        </footer>            
                    </div>
                    <div data-tab="2" class="tab-content hidden">
                      <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                        <%= f.hidden_field :tmp_external_color_background, :value => nil %>
                        <p class="info">Рекомендуемый размер загружаемого изображения 920x900 пикселей</p>
                        <div class="row">
                            <div class="label">Загрузить фон с компьютера</div>
                            <div class="field">
                                <div class="input-file">
                                    <input type="text" size="5" />
                                    <input type="button" value="Обзор..." />
                                    <%= f.file_field :tmp_external_image_background %>
                                </div>
                            </div>
                        </div>
                      <% end %>
                      <footer>
                        <div class="buttons">
                          <div style="float:left;">
                            <%= render :partial => 'company_panel/sites/construct/commit_form' %>
                          </div>
                          <div style="float:left;">
                            <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                              <% # NOTE clear только очищает запись в базе, а remove ещё и удаляет файл с диска %>
                              <%= f.hidden_field :clear_tmp_external_image_background, :value => true %>
                              <%= f.hidden_field :remove_external_image_background, :value => true %>
                              <input type="submit" class="button" value="Сбросить" />
                            <% end %>
                          </div>
                          <div class="clear;"></div>
                        </div>
                      </footer>
                    </div>
                </div>
            </div>
            
        </div>
