<!-- header : color_background-->
        <div data-setting="header::color_background" class="setting hidden">
            <div class="container">
                <!--Левый блок с вкладками-->
                <div class="left">
                    <ul class="tabs">
                        <li><a data-tab="1" href="#" class="active">Цвет фона</a></li>
                    </ul>
                    <div class="tabs-content">
                        <div data-tab="1" class="tab-content visible">
                          <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                            <%= f.hidden_field :remove_tmp_header_image_background, :value => true %>
                            <div class="picker">
                                <div class="plugin"><%= f.text_field :tmp_header_color_background, :value => @site.get_header_color_background(true) %></div>
                                <div class="result"></div>
                                <div class="clear"></div>
                            </div>
                          <% end %>
                        </div>
                    </div>
                </div>
                <!--Правый блок-->
                <div class="right">
                    <div class="title"><!--none--></div>
                    <div class="content"><!--none--></div>
                </div>
                <div class="clear"></div>
            </div>
            <!--Тег говорит сам за себя-->
            <footer>
                <div class="buttons">
                  <div style="float:left;">
                    <%= render :partial => 'company_panel/sites/construct/commit_form' %>
                  </div>
                  <div style="float:left;">
                    <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                      <input type="hidden" name="site[header_color_background]" value="" />
                      <input type="hidden" name="site[tmp_header_color_background]" value="" />
                      <input type="submit" class="button" value="Сбросить" />
                    <% end %>
                  </div>
                  <div class="clear"></div>
                </div>
            </footer>
        </div><!--header : color_background-->
