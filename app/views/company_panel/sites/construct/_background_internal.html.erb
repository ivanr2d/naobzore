<!-- background : internal -->
        <div data-setting="background::internal" class="setting hidden">
            <div class="container">
                <!--Левый блок с вкладками-->
                <ul class="tabs">
                    <li><a data-tab="1" href="#" class="active">Цвет фона</a></li>
                </ul>
                <div class="tabs-content">
                    <div data-tab="1" class="tab-content visible">
                      <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                        <%= f.hidden_field :remove_tmp_internal_image_background, :value => nil %>
                        <div class="picker">
                            <div class="plugin"><%= f.text_field :tmp_external_color_background, :value => @site.get_external_color_background(true) %></div>
                            <div class="result"></div>
                            <div class="clear"></div>
                        </div>
                      <% end %> 
                    </div>
                    
                </div>
            </div>
            <!--Тег говорит сам за себя-->
            <footer>
                <div class="buttons">
                  <div style="float:left;">
                    <%= render :partial => 'company_panel/sites/construct/commit_form' %>
                  </div>
                  <div style="float:left;">
                    <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                      <input type="hidden" name="site[internal_color_background]" value="" />
                      <input type="hidden" name="site[tmp_internal_color_background]" value="" />
                      <input type="submit" class="button" value="Сбросить" />
                    <% end %>
                  </div>
                  <div class="clear"></div>
                </div>
            </footer>
        </div>
