<!-- header : image_background-->
        <div class="setting" data-setting="header::image_background">
          <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
            <%= f.hidden_field :tmp_header_color_background, :value => nil %>
            <div class="container">
                <!--Полный блок с вкладками-->
                <ul class="tabs">
                    <li><a data-tab="1" href="#" class="active">Изображение фона</a></li>
                </ul>
                <div class="tabs-content">
                    <div data-tab="1" class="tab-content visible">
                    
                        <p class="info">Рекомендуемый размер загружаемого изображения 900x230 пикселей</p>
                    
                        <div class="row">
                            <div class="label">Загрузить фото с компьютера</div>
                            <div class="field">
                                <div class="input-file">
                                    <input type="text" size="5" />
                                    <input type="button" value="Обзор..." />
                                    <%= f.file_field :tmp_header_image_background %>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
          <% end %>
            <!--Тег говорит сам за себя-->
            <footer>
                <div class="buttons">
                  <div style="float:left;">
                    <%= render :partial => 'company_panel/sites/construct/commit_form' %>
                  </div>
                  <div style="float:left;">
                    <%= form_for @site, :url => company_panel_site_path(@site), :html => { :target => :minisite } do |f| %>
                      <%= f.hidden_field :clear_tmp_header_image_background, :value => true %>
                      <%= f.hidden_field :remove_header_image_background, :value => true %>
                      <input type="submit" class="button" value="Сбросить" />
                    <% end %>
                  </div>
                  <div class="clear"></div>
                </div>
            </footer>
        </div>
