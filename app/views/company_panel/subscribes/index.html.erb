<div class="list">
  <ul class="tabs">
    <li><a href="#" data-id="1" class="active">E-mail подписчики</a></li>
    <li><a href="<%= company_panel_emails_path %>" data-id="2">E-mail рассылки</a></li>
  </ul>
  <div class="content">
    <!-- E-mail подписчики -->
    <div class="tab-content" data-id="1">
	  <div class="kegrid-wrap">
                    <table class="kegrid style-silver" cellpadding="0" cellspacing="0">
                        
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Подписчик</th>
                                <th>Дата подписки</th>
                                <th>Контент</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                          <% @subscribes.each do |subscribe| %>
                            <tr>
                                <td><%= subscribe.user_id %></td>
                                <td><%= subscribe.user.fi %></td>
                                <td><%= I18n.l subscribe.created_at, :format => '%d.%m.%Y' %></td>
                                <td><%= subscribe.category.title %></td>
                                <td>
                                    <a href="#" class="view-popup" data-type="send-message" data-to_id="<%= subscribe.user_id %>"><img src="/controlPanel/images/send.png" alt="" /></a>
                                    <%= link_to raw('<img src="/controlPanel/images/delete.png" alt="" />'), company_panel_subscribe_path(subscribe), :method => :delete, :confirm => "Вы уверены?'", :title => 'Удалить подписку' %>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
                        
                    </table>
      </div>
      <!-- Подвальчик -->
      <footer class="footer text-right">
				<%= render :partial => 'company_panel/shared/pagination', :locals => {:obj => @subscribes} %>
      </footer>
    </div>
  </div>
</div>
