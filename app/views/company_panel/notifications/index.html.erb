<% @notifications.each do |notification| %>
  <div class="notice-item">
    <img src="/company-panel/images/logo-notice.png" class="notice-img">
    <div class="notice-body">
      <div class="notice-caption">
        <span class="time"><%= time_ago_in_words(notification.created_at) %> назад</span>
        <h2 class="title"><%= notification.subject %></h2>
      <div class="clear"></div>
      </div>
      <div class="notice-txt">
        <%= notification.text %>
      </div>
    </div>
    <div class="clear"></div>
  </div>  
<% end %>
