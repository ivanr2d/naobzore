<%= render_error_explanation @price_list %>
<div class="list">
  <ul class="reload-tabs">
    <li>
      <% if params[:cat_type] == 'Good' %>
        <a href="#" data-id="1" class="active">Товары</a>
      <% else %>
        <a href="?cat_type=Good" data-id="1">Товары</a>
      <% end %>
    </li>
    <li>
      <% if params[:cat_type] == 'Service' %>
        <a href="#" data-id="1" class="active">Услуги</a>
      <% else %>
        <a href="?cat_type=Service" data-id="2">Услуги</a>
      <% end %>
    </li>
		<li style="padding-left:100px;">Загружено <%= pluralize @price_entities.count, 'позиция', 'позиции', 'позиций' %></li>
    <li style="padding-left:50px;">
      
  </ul>
					<div class="content">
						
						<div class="tab-content" data-id="1">
							
							<div class="top-bar">
								<ul class="hint">
									<li><div class="row-error"></div> В строке ошибка</li>
									<li><div class="col-error"></div> В ячейке ошибка</li>
									<li><div class="points"></div> Вызов диалогового окна "Категории"</li>
								</ul>
							</div>
		<div class="kegrid-wrap-outer">
			<div class="kegrid-scroll-arr kegrid-scroll-arr-l"></div>
			  <div class="kegrid-wrap">		
                <table class="kegrid style-silver" cellpadding="0" cellspacing="0">
                    
                    <thead>
                        <tr>
                          <th width="20"><input type="checkbox" class="checked-all" /></th>
                          <% PriceEntity.price_columns.each do |c| %>
                            <th width="80"><%= t "activerecord.attributes.price_entity.#{c}" %></th>
                          <% end %>
                        </tr>
                    </thead>
                    <tbody>
                      <%= render :partial => 'price_entity', :collection => @price_entities %>
                    </tbody>
                </table>
			</div>
			<div class="kegrid-scroll-arr kegrid-scroll-arr-r"></div>
		</div>
                <div class="flr">
                <br />
                <%= form_for :entity, :url => export_company_panel_price_entities_path do |f| %>
                  <%= hidden_field_tag :cat_type, params[:cat_type] %>
                  <%= hidden_field_tag :id, @price_list.id %>
                  <%= f.submit 'Сохранить', :class =>'blue-button'%>
                <% end %>
                </div>
														
							<!-- Подвальчик -->
              <footer class="footer">
                <div class="element">
                  <img src="/controlPanel/images/checkbox.png" /> <span id="checkedCount">0</span>
                </div>
                <div class="element">
                  <select class="mass-action">
                    <option value="3">Удалить</option>
                  </select>
                </div>
                <%= render :partial => 'company_panel/shared/pagination', :locals => {:obj => @price_entities} %>
              </footer>
						</div><!--tab-content-->
						
					</div><!--content-->
				</div><!--list-->

<%= render :partial => 'company_panel/shared/goods_and_services_categories_popup' %>
<%= render :partial => 'company_panel/shared/characteristics_popup' %>
<%= render :partial => 'company_panel/shared/description_popup' %>
