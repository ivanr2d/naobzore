<!--Попап для привязки картинки к товару, услуге ... -->
    <div class="popup hidden" data-type="search-entity">
        <header>
            <div class="left"><h2 class="title">Поиск <span class="photo-match-entity">товара</span></h2></div>
            <div class="right"><a class="close" href="#"></a></div>
        </header>
    
		<div class="description">
         
			<div class="field with-cat-popup">
              <label>Найти из каталога</label>
				<div class="autocomplite-wrap">
				  <input type="text" class="cat-sel-inp placeholder live-filter" id="photo_entity_search" data-url="<%= url %>" value="" placeholder="Введите название" name="result">
				</div>
			</div>
		  
		<div class="esr-wrapper"> 
		  <table class="style-silver" cellpadding="0" cellspacing="0" id="photo_entity_search_results">
			<thead>
			  <tr>
				<th></th>
				<th>Название</th>
				<th>Описание</th>
			  </tr>
			</thead>
			<tbody>  
               <% if @service %>
                <% @service.each do |g| %>
                 <tr data-article="<%= g.article %>" data-name="<%= g.name %>" data-entity_type="#"><td><input type="checkbox" name="#" value="<%= g.id %>" /></td><td><%= g.name %></td><td><div class="entity-search-results-desc"><%=raw g.description %></div></td></tr></tr>
                 <% end %>
                <% end %>
			</tbody>
			
		  </table>
		</div>	
		  

        </div>
	
        
        <footer>
            <div class="left"></div>
            <div class="right"><input class="blue-button save" type="button" value="Сохранить"></div>
        </footer>
    </div>
