<div class="row">
  <div class="label"><label>Характеристики</label></div>
  <div class="field characteristics">
      <table class="style-silver" cellpadding="0" cellspacing="0">
	  <tr>
		<th>Название</th>
		<th>Значение</th>
		<th style="max-width:25px; width:25px;"></th>
	  </tr>
        <% obj.characteristics.each do |c| %>
          <tr>
              <td><input type="text" name="characteristics[][key]" value="<%= c.key %>" /></td>
              <td><input type="text" name="characteristics[][value]" value="<%= c.value %>" /></td>
              <td style="text-align: center"><a href="javascript:void(0);" onclick="$(this).parent().parent().remove();" class="del-cross" title="Удалить">&times;</a></td>
          </tr>
        <% end %>
        <tr class="hidden oblig">
            <td><input type="text" value="" class="bordered" /></td>
            <td><input type="text" value="" class="bordered" /></td>
            <td style="text-align: center"><a href="javascript:void(0);" onclick="$(this).parent().parent().remove();" class="del-cross" title="Удалить">&times;</a></td>
        </tr>
        <tr class="oblig">
          <td></td>
          <td colspan="2" style="text-align: right"><a href="javascript:void(0);" class="add-characteristic">Добавить</a></td>
        </tr>
      </table>
  </div>
  <div class="clear"></div>
</div>
