<div class="list">
	<div class="content">
	  <div class="kegrid-wrap">
		<table class="table-akty style-silver" cellpadding="0" cellspacing="0">
				  <thead>
						  <tr>
								  <th width="2">№</th>
								  <th>Название</th>
								  <th>Дата</th>
								  <th>Пользователь</th>
								  <th>Действия</th>
						  </tr>
				  </thead>
				  
				  <tbody>
					  <% @resumes.each do |resume| %>
						  <tr>
								  <td><%= resume.id %></td>
								  <td><%= resume.name %></td>
								  <td><%= I18n.localize resume.created_at, :format => '%d.%m.%y' %></td>
								  <td><%= resume.f_name %> <%= resume.l_name %></td>
								  <td>
					  <a href="#" class="view-popup" data-type="send-message" data-to_id="<%= resume.user_id %>"><img src="/controlPanel/images/send.png"</a>
					  <%= link_to raw('<img src="/controlPanel/images/delete.png" alt="" />'), company_panel_resume_path(resume), :method => :delete, :confirm => "Вы уверены?'", :title => 'Удалить резюме' %>
								  </td>
						  </tr>
					  <% end %>
				  </tbody>
		  </table>
		</div>		
		<!-- Подвальчик -->
		<footer class="footer text-right">
			<%= render :partial => 'company_panel/shared/pagination', :locals => {:obj => @resumes} %>
		</footer>
  </div>
</div>
