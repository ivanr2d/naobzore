<%= form_for @user, :url => update_email_company_panel_user_path(@user) do |f| %>
  <%= render_error_explanation @user %>
  <div class="form">
    <h1 class="title">Изменение адреса электронной почты</h1>
    <div class="body-blue">
      <div class="row">
        <div class="label"><%= label_tag :current_email, 'Текущий e-mail' %></div>
        <div class="field"><%= text_field_tag :current_email %></div>
        <div class="clear"></div>
      </div>
      <div class="row">
        <div class="label"><%= f.label :current_password, 'Текущий пароль' %></div>
        <div class="field"><%= f.password_field :current_password %></div>
        <div class="clear"></div>
      </div>
      <div class="row">
        <div class="label"><%= f.label :email, 'Новый e-mail' %></div>
        <div class="field">
          <%= f.text_field :email %>
          <div class="ext-field">
            <input type="checkbox" name="use_email_as_contact" <%= @user.prefered_contacts.include?('email') ? 'checked=checked' : '' %> /> Использовать новый e-mail в качестве контактного
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <div class="buts">
      <input type="submit" class="blue-button big" value="Изменить" />
    </div>
  </div>
<% end %>
