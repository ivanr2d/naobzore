<div class="item">
    <div class="image"><a href="<%= entity_path entity %>"><img src="<%= entity.main_photo.try(:thumb) %>" /></a></div>
    <a href="<%= entity_path entity %>" class="name"><%= entity.name %></a>
    <p class="price">Цена: <span><%= number_with_delimiter entity.price %> р.</span></p>
    <div class="info">
        <p class="feedbacks">Отзывы: <span class="plus">+<%= entity.plus_count %></span>/<span class="minus">-<%= entity.minus_count %></span></p>
        <%= render :partial => 'minisite/shared/likes', :locals => { :entity => entity } %>
    </div>
</div>
