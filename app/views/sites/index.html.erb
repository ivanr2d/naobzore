<% @sites.each do |site| %>
  <tr>
    <td><%= site.company_id %></td>
    <td><%= site.title %></td>
    <td><%= site.subdomen %></td>
    <td><%= site.menu_items %></td>
    <td><%= site.contacts %></td>
    <td><%= site.color %></td>
    <td><%= site.template %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

